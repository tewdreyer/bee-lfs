# set explicit PATH
export PATH=${LFS_PREFIX}/bin

mee_install_post() {
    cat > ${D}${BINDIR}/lex <<EOF
#!/bin/sh
exec ${BINDIR}/flex -l "\$@"
EOF

    chmod -v 755 ${D}${BINDIR}/lex
}
