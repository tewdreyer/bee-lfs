SRCURL[0]="http://www.zlib.net/zlib-${PKGVERSION}.tar.xz"

# set PREFIX to LFS_PREFIX (default: /tools)
PREFIX=${LFS_PREFIX=/tools}

# set explicit PATH
export PATH=${PREFIX}/bin:/bin:/usr/bin

mee_configure() {
    prefix=${PREFIX} \
    libdir=${LIBDIR} \
    sharedlibdir=${LIBDIR} \
    includedir=${INCLUDEDIR} \
    mandir=${MANDIR} \
    start_cmd ${S}/configure
}
